<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.bottom_nav.HomeFragment">

    <TextView
        android:id="@+id/exist_walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="44dp"
        android:text="남은 걸음 수 : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/count_exist_walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@+id/exist_walk"
        app:layout_constraintStart_toEndOf="@+id/exist_walk"
        app:layout_constraintTop_toTopOf="@+id/exist_walk" />

    <TextView
        android:id="@+id/tv_walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="걸음"
        app:layout_constraintBottom_toBottomOf="@+id/count_exist_walk"
        app:layout_constraintStart_toEndOf="@+id/count_exist_walk"
        app:layout_constraintTop_toTopOf="@+id/count_exist_walk"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="시작"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_walkingCount" />

    <TextView
        android:id="@+id/tv_lastCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남은 걸음 수"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_walkingCount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <TextView
        android:id="@+id/tv_walkingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="걸음 수"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_lastCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <TextView
        android:id="@+id/tv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="112dp"
        android:text="모은 귤 : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start" />

    <TextView
        android:id="@+id/tv_collected_mandarine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24"
        app:layout_constraintStart_toEndOf="@+id/tv_collect"
        app:layout_constraintTop_toTopOf="@+id/tv_collect" />

    <TextView
        android:id="@+id/ge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개"
        app:layout_constraintStart_toEndOf="@+id/tv_collected_mandarine"
        app:layout_constraintTop_toTopOf="@+id/tv_collect" />

</androidx.constraintlayout.widget.ConstraintLayout>